<%- include ('../components/head') %>

<main>

    <h1>Over jou</h1>

    <form method="post" action="/personal">
        <label>Naam
            <input type="text" autocomplete="off" name="name" required>
        </label>

        <label>Leeftijd
            <input type="text" autocomplete="off" name="age" required>
        </label>

        <fieldset>
            <legend>Gender</legend>
            <label>Man
                <input type="radio" value="male" name="gender" required>
            </label>
            <label>Vrouw
                <input type="radio" value="female" name="gender" required>
            </label>
        </fieldset>

        <label>Woonplaats
            <input type="text" autocomplete="off" name="place" required>
        </label>

        <label>Telefoon
            <input type="tel" autocomplete="off" name="phone" required>
        </label>

        <label>Email
            <input type="email" autocomplete="off" name="email" required>
        </label>

        <label>Lievelingskleur
            <input type="color" autocomplete="off" name="color" required>
        </label>

        <input type="hidden" name="userid" value=<%= userid %>>

        <!-- Navigation -->
        <nav>
            <input type="submit" value="Persoonlijk">
        </nav>

    </form>

    <%- include ('../components/footer') %>